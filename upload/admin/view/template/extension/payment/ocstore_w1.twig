{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    {% if success %}
    <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form" class="form-horizontal">
          <fieldset>
            <legend><i class="fa fa-info-circle"></i> {{ text_info }}</legend>

              <div class="form-group">
                <span class="col-sm-12">{{ text_register }}</span>
              </div>

              <div class="form-group">
                <span class="col-sm-12">{{ text_instruction }}</span>
              </div>

              <div class="form-group">
                <label class="col-sm-4 control-label" for="input-result_url">{{ entry_result_url }}</label>
                <div class="col-sm-8">
                  <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-link"></i></span>
                    <input type="text" readonly="readonly" value="{{ payment_ocstore_w1_result_url }}" id="input-result_url" class="form-control">
                  </div>
                </div>
              </div>

              <div class="form-group">
                <label class="col-sm-4 control-label" for="input-ecp">{{ entry_ecp }}</label>
                <div class="col-sm-8">
                  <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-link"></i></span>
                    <input type="text" readonly="readonly" value="MD5" id="input-ecp" class="form-control">
                  </div>
                </div>
              </div>

          </fieldset>
          <fieldset>
            <legend><i class="fa fa-wrench"></i> {{ text_setting }}</legend>

              <div class="form-group required">
                <label class="col-sm-2 control-label" for="input-shop_id">{{ entry_shop_id }}</label>
                <div class="col-sm-10">
                  <input type="text" name="payment_ocstore_w1_shop_id" value="{{ payment_ocstore_w1_shop_id }}"
                         placeholder="{{ entry_shop_id }}" id="input-shop_id" class="form-control" />
                  {% if error_shop_id %}
                  <div class="text-danger">{{ error_shop_id }}</div>
                  {% endif %}
                </div>
              </div>

              <div class="form-group required">
                <label class="col-sm-2 control-label" for="input-sign">{{ entry_sign }}</label>
                <div class="col-sm-10">
                  <input type="text" name="payment_ocstore_w1_sign" value="{{ payment_ocstore_w1_sign }}"
                         placeholder="{{ entry_sign }}" id="input-sign" class="form-control" />
                  {% if error_sign %}
                  <div class="text-danger">{{ error_sign }}</div>
                  {% endif %}
                </div>
              </div>

              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-currency">{{ entry_currency }}</label>
                <div class="col-sm-10">
                  <select name="payment_ocstore_w1_currency" id="input-currency" class="form-control">
                    {% for key, value in currencies %}
                    {% if key == payment_ocstore_w1_currency %}
                    <option value="{{ key }}" selected="selected">{{ value.title }}</option>
                    {% else %}
                    <option value="{{ key }}">{{ value.title }}</option>
                    {% endif %}
                    {% endfor %}
                  </select>
                </div>
              </div>

              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-order_confirm_status">{{ entry_order_confirm_status }}</label>
                <div class="col-sm-10">
                  <select name="payment_ocstore_w1_order_confirm_status_id" id="input-order_confirm_status" class="form-control">
                    {% for order_status in order_statuses if order_status.order_status_id is defined %}
                    {% if order_status.order_status_id == payment_ocstore_w1_order_confirm_status_id %}
                    <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                    {% else %}
                    <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                    {% endif %}
                    {% endfor %}
                  </select>
                </div>
              </div>

              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-order_status">{{ entry_order_status }}</label>
                <div class="col-sm-10">
                  <select name="payment_ocstore_w1_order_status_id" id="input-order_status" class="form-control">
                    {% for order_status in order_statuses if order_status.order_status_id is defined %}
                    {% if order_status.order_status_id == payment_ocstore_w1_order_status_id %}
                    <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                    {% else %}
                    <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                    {% endif %}
                    {% endfor %}
                  </select>
                </div>
              </div>

              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-order_fail_status">{{ entry_order_fail_status }}</label>
                <div class="col-sm-10">
                  <select name="payment_ocstore_w1_order_fail_status_id" id="input-order_fail_status" class="form-control">
                    {% for order_status in order_statuses if order_status.order_status_id is defined %}
                    {% if order_status.order_status_id == payment_ocstore_w1_order_fail_status_id %}
                    <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                    {% else %}
                    <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                    {% endif %}
                    {% endfor %}
                  </select>
                </div>
              </div>

              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-geo_zone">{{ entry_geo_zone }}</label>
                <div class="col-sm-10">
                  <select name="payment_ocstore_w1_geo_zone_id" id="input-geo_zone" class="form-control">
                    <option value="0">{{ text_all_zones }}</option>
                    {% for geo_zone in geo_zones %}
                    {% if geo_zone.geo_zone_id == payment_ocstore_w1_geo_zone_id %}
                    <option value="{{ geo_zone.geo_zone_id }}" selected="selected">{{ geo_zone.name }}</option>
                    {% else %}
                    <option value="{{ geo_zone.geo_zone_id }}">{{ geo_zone.name }}</option>
                    {% endif %}
                    {% endfor %}
                  </select>
                </div>
              </div>

              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                <div class="col-sm-10">
                  <select name="payment_ocstore_w1_status" id="input-status" class="form-control">
                    {% if payment_ocstore_w1_status %}
                    <option value="1" selected="selected">{{ text_enabled }}</option>
                    <option value="0">{{ text_disabled }}</option>
                    {% else %}
                    <option value="1">{{ text_enabled }}</option>
                    <option value="0" selected="selected">{{ text_disabled }}</option>
                    {% endif %}
                  </select>
                </div>
              </div>

              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-sort_order">{{ entry_sort_order }}</label>
                <div class="col-sm-10">
                  <input type="text" name="payment_ocstore_w1_sort_order" value="{{ payment_ocstore_w1_sort_order }}"
                         placeholder="{{ entry_sort_order }}" id="input-sort_order" class="form-control" />
                </div>
              </div>

          </fieldset>
        </form>
      </div><!-- </div class="panel-body"> -->
    </div><!-- </div class="panel panel-default"> -->
  </div><!-- </div class="container-fluid"> -->
</div><!-- </div id="content"> -->